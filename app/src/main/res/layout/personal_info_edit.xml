<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/personal_bg_white"
    tools:context=".PersonalInfoEditActivity">

    <include
        android:id="@+id/include"
        layout="@layout/layout_title"/>


    <RelativeLayout
        android:id="@+id/personal_notification_newattention"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/personal_bar_white">


        <EditText
            android:id="@+id/personal_info_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="15sp"
            android:textColor="@color/personal_text_black"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/personal_info_edit_clear"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:cursorVisible="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:background="@color/divider_gray" />

        <ImageView
            android:id="@+id/personal_info_edit_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/ic_clear"/>
    </RelativeLayout>

</LinearLayout>