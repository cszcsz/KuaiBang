<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    android:foreground="?attr/selectableItemBackground">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_helped_rv_item_userImg"
            android:layout_width="28dp"
            android:layout_height="27dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/ic_userhead_girl" />

        <TextView
            android:id="@+id/message_helped_rv_item_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="小傻子"
            app:layout_constraintEnd_toStartOf="@+id/message_helped_rv_item_userSexImg"
            app:layout_constraintStart_toEndOf="@+id/message_helped_rv_item_userImg"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/message_helped_rv_item_userSexImg"
            android:layout_width="26dp"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/message_helped_rv_item_userName"
            app:layout_constraintTop_toTopOf="@+id/message_helped_rv_item_userImg"
            app:srcCompat="@mipmap/ic_girl_symbol" />

        <TextView
            android:id="@+id/message_helped_rv_item_title"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="充电宝急需"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/message_helped_rv_item_userImg"
            app:layout_constraintTop_toBottomOf="@+id/message_helped_rv_item_userName" />

        <TextView
            android:id="@+id/message_helped_rv_item_content"
            android:layout_width="346dp"
            android:layout_height="23dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="我在南教急需一个充电宝，希望有的同学能帮我下~"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/message_helped_rv_item_title" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="17dp"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/message_helped_rv_item_content"
            app:srcCompat="@mipmap/ic_location" />

        <TextView
            android:id="@+id/message_helped_rv_item_location"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="1dp"
            android:text="南教"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/message_helped_rv_item_location"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:srcCompat="@mipmap/ic_score" />

        <TextView
            android:id="@+id/message_helped_rv_item_score"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="1dp"
            android:text="10"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>

